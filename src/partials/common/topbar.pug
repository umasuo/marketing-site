nav(class='topbar navbar navbar-default')
  div(class='container')

    //- Brand and toggle get grouped for better mobile display
    div(class='navbar-header')
      img(class='navbar-brand' src='/static/img/logo.svg')

    div(class='collapse navbar-collapse')
      ul(class='nav navbar-nav')
        each item, path in navitems
          li(class = (path === current  && 'active'))
            a(href = path)= item

      div(class='navbar-right')
        a(class='btn btn-link topbar__login-btn') 登录
        a(class='btn topbar__register-btn') 立即注册
